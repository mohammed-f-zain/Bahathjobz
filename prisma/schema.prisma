generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id                String            @id @default(uuid())
  email             String            @unique
  password          String?
  first_name        String
  last_name         String
  phone             String?
  country           String?
  role              String
  avatar            String?
  googleId          String?
  otp               String?           
  is_verified       Boolean           @default(false)
  is_active         Boolean           @default(true)
  interests         Json?             // Array of industry interests for job seekers
  interests_selected Boolean          @default(false) // Track if user has selected interests (for existing users)
  created_at        DateTime          @default(now())
  updated_at        DateTime          @default(now())
  blog_posts        blog_post[]
  companies         company[]
  engagements       engagement[]
  jobs              job[]
  job_applications  job_application[]
  job_seeker        job_seeker?
  notifications     notification[]
  liked_jobs        liked_job[]
  password_reset_tokens password_reset_token[]

  @@map("user")
}

model company {
  id            String   @id @default(uuid())
  name          String
  logo          String?
  banner        String?
  tagline       String?
  description   String?
  industry      String
  website       String?
  location      String
  contact_email String
  contact_phone String?
  is_approved   Boolean  @default(false)
  employer_id   String
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())
  employer      user     @relation(fields: [employer_id], references: [id])
  jobs          job[]

  @@map("company")
}

model job {
  id                    String            @id @default(uuid())
  title                 String
  description           String
  responsibilities      String
  requirements          String
  benefits              String?
  location              String
  work_type             String
  industry              String
  education             String
  visa_eligible         Boolean           @default(false)
  seniority             String
  salary_min            Int?
  salary_max            Int?
  currency              String            @default("USD")
  is_approved           Boolean           @default(false)
  is_active             Boolean           @default(true)
  send_email_notification Boolean         @default(false) // Whether to send email notifications
  notification_interests Json?            // Array of interests to notify about this job
  company_id            String
  employer_id           String
  created_at            DateTime          @default(now())
  updated_at            DateTime          @default(now())
  deadline              DateTime?
  engagements           engagement[]
  company               company           @relation(fields: [company_id], references: [id])
  employer              user              @relation(fields: [employer_id], references: [id])
  job_applications      job_application[]
  liked_jobs            liked_job[]

  @@map("job")
}

model job_application {
  id            String   @id @default(uuid())
  job_id        String
  job_seeker_id String
  cover_note    String?
  status        String   @default("applied")
  applied_at    DateTime @default(now())
  updated_at    DateTime @default(now())
  job           job      @relation(fields: [job_id], references: [id], onDelete: Cascade)
  job_seeker    user     @relation(fields: [job_seeker_id], references: [id])

  @@unique([job_id, job_seeker_id])
  @@map("job_application")
}

model job_seeker {
  id               String    @id @default(uuid())
  user_id          String    @unique
  personal_email   String?
  profile_pic      String?
  nationality      String?
  dob              DateTime?     @unique  
  age              Int?           
  gender           String?        
  qid_no           String?        
  passport_no      String?        
  visa_status      String?
  marital_status   String?        
  dependents       Int?            
  total_experience Int?            
  industries       Json?           
  current_position String?
  summary          String?
  experience       String?
  current_employer_experience Int? 
  current_compensation Json?       
  expected_compensation Json?      
  notice_period    String?        
  reason_for_change String?        
  availability     String?
  education        String?
  skills           Json?
  resume_url       String?
  location         String?
  portfolio_url    String?
  linkedin_url     String?
  created_at       DateTime  @default(now())
  updated_at       DateTime  @default(now())
  user             user      @relation(fields: [user_id], references: [id])
 career_history   career_history[]    
  @@map("job_seeker")
}

model career_history {
  id               String    @id @default(uuid())
  job_seeker_id    String
  company          String
  title            String?
  position         String?
  location         String? 
  from_date        DateTime
  to_date          DateTime?
  currently_working Boolean  @default(false)
  created_at       DateTime  @default(now())
  updated_at       DateTime  @default(now())

  job_seeker job_seeker @relation(fields: [job_seeker_id], references: [id], onDelete: Cascade)

  @@unique([job_seeker_id, company, title], name: "job_seeker_id_company_title")
  @@map("career_history")
}


model engagement {
  id         String   @id @default(uuid())
  job_id     String
  user_id    String
  type       String
  content    String?
  created_at DateTime @default(now())
  job        job      @relation(fields: [job_id], references: [id], onDelete: Cascade)
  user       user     @relation(fields: [user_id], references: [id])

  @@map("engagement")
}

model notification {
  id         String   @id @default(uuid())
  user_id    String
  title      String
  message    String
  type       String
  is_read    Boolean  @default(false)
  created_at DateTime @default(now())
  user       user     @relation(fields: [user_id], references: [id])

  @@map("notification")
}

model blog_post {
  id             String         @id @default(uuid())
  title          String
  slug           String         @unique
  excerpt        String
  content        String
  featured_image String?
  category       String
  author_id      String
  is_published   Boolean        @default(false)
  is_featured    Boolean        @default(false)
  views          Int            @default(0)
  likes          Int            @default(0)
  created_at     DateTime       @default(now())
  updated_at     DateTime       @default(now())
  published_at   DateTime?
  blog_comments  blog_comment[]
  author         user           @relation(fields: [author_id], references: [id])

  @@map("blog_post")
}

model blog_comment {
  id           String    @id @default(uuid())
  post_id      String
  author_name  String
  author_email String
  content      String
  is_approved  Boolean   @default(false)
  created_at   DateTime  @default(now())
  post         blog_post @relation(fields: [post_id], references: [id])

  @@map("blog_comment")
}

model contact_inquiry {
  id           String    @id @default(cuid())
  name         String
  email        String
  inquiry_type String
  subject      String
  message      String
  status       String    @default("pending")
  priority     String    @default("low")
  created_at   DateTime  @default(now())
  responded_at DateTime?

  replies      contact_inquiry_reply[] 
}

model contact_inquiry_reply {
  id          String          @id @default(cuid())
  inquiry_id  String
  inquiry     contact_inquiry @relation(fields: [inquiry_id], references: [id], onDelete: Cascade)
  admin_id    String         
  reply       String
  created_at  DateTime        @default(now())
}


model liked_job {
  id       String   @id @default(uuid())
  user_id  String
  job_id   String
  liked_at DateTime @default(now())

  user user @relation(fields: [user_id], references: [id], onDelete: Cascade)
  job  job  @relation(fields: [job_id], references: [id], onDelete: Cascade)

  @@unique([user_id, job_id])
  @@map("liked_job")
}

model password_reset_token {
  id         String   @id @default(uuid())
  user_id    String
  token      String   @unique
  expires_at DateTime
  used       Boolean  @default(false)
  created_at DateTime @default(now())

  user user @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("password_reset_token")
}

model otp {
  id        String   @id @default(uuid())
  email     String
  otp       String
  expiresAt DateTime
  created_at DateTime @default(now())

  @@map("otp")
}